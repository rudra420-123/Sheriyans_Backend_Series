<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sheriyans Backend Series</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="main w-full min-h-screen bg-zinc-900">
            <div class="form p-10 text-white">
                <form action="/create" method="post">
                    <input
                        class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800"
                        type="text" placeholder="Title goes here" name="title">
                    <textarea
                        class="block px-5 py-2 w-full rounded-md outline-none mt-2 resize-none bg-zinc-800"
                        placeholder="Write your task details here" name="details"></textarea>
                    <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
                        type="submit" value="Create Task">
                </form>
            </div>
            <div class="tasks p-10 flex gap-3 flex-wrap">
                <% if(files.length>0){ %>
                    <% files.forEach(function(val){ %>
                        <div class="task w-72 px-3 py-2 bg-zinc-800 rounded-md">
                            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                            <div class="flex w-full justify-between mt-3 items-center">
                                <a class="text-blue-500 inline-block" href="/files/<%= val %>">Read More</a>
                                <a class="text-zinc-400 inline-block" href="/edit/<%= val %>">Edit Name</a>
                            </div>
                        </div>
                        <% }) %>
                <% } else{ %>
                    <h3 class="text-white">No Tasks Yet</h3>    
                <% } %>                                                  
            </div>
        </div>
        <!-- <script src="index.js"></script> -->
    </body>
</html>

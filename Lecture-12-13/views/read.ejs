<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>CRUD-APPLICATION</title>
        <link rel="stylesheet" href="css/style.css">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="w-full h-full bg-zinc-900 p-10 text-white">
            <div class="nav mb-10">
                <a href="/" class="text-blue-500">Back To Home</a>
            </div>
            <h1 class="text-3xl tracking-tighter mb-10">All Users</h1>
            <div class="users flex gap-4 flex-wrap">
                <% if(users.length>0){%>
                    <% users.forEach(function (user) { %>
                        <div class="user w-62 p-4 bg-zinc-800 rounded-lg">
                            <div class="w-full h-52 bg-zinc-700 rounded-lg overflow-hidden">
                                <img src="<%= user.imageUrl  %>" alt="<%= user.name %>" class="w-full h-full object-cover object-center">
                            </div>
                            <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                            <h5 class="text-zinc-500"><%= user.email%></h5>
                            <div class="flex gap-3 mt-10">
                                <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit User</a>
                                <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
                            </div>
                        </div>
                        <% }) %>
               <% } else{ %>
                    <h3 class="text-zinc-500">No Users Found !!!</h3>
               <% }%>                
            </div>
        </div>
    </body>
</html>